@model IEnumerable<Team103.Models.TblOrderLine>
@{
    ViewData["Title"] = "MyOrders";
}

@if (Model.Any())
{
    <h1>Orders for @Context.User.Identity.Name</h1>

    <table class="table table-sm table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    Order Date
                </th>
                <th>
                    Product
                </th>
                <th class="text-right">
                    Price
                </th>
                <th class="text-right">
                    Quanitity
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @($"{item.OrderFkNavigation.OrderDate:d}")
                    </td>
                    <td>
                        @item.ProductFkNavigation.ProductName
                    </td>
                    <td class="text-right">
                        @item.ProductFkNavigation.UnitPrice.ToString("c")
                    </td>
                    <td class="text-right">
                        @item.OrderQuantity
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1>No orders for @Context.User.Identity.Name</h1>
}