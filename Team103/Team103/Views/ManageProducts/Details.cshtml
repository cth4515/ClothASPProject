@model Team103.Models.TblProduct

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Product
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.UnitPrice.ToString("c2")
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductDescription)
        </dd>
        <dt class="col-sm-2">
            Number In Stock
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OnHand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryFkNavigation.ProductCategoryName)
        </dd>
        <dt class="col-sm-2">
            <br/>
           Image
        </dt>
        <dd class="col-sm-10">
            <img src="~/Images/Product/@Model.ImageFile" height="200" width="200" alt="@Model.ProductName" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to Product List</a>
</div>
