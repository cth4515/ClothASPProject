@model IEnumerable<Team103.Models.TblProduct>

@{
    ViewData["Title"] = "Index";
}

 <h1>Team103 - Products</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Product</a>
</p>
<table class="table table-bordered table-hover" id="product">
    <thead>
        <tr>
            <th>
                Image
            </th>
            <th>
                Product
            </th>
            <th>
                Price
            </th>
            <th>
                Description
            </th>
            <th>
                Number in Stock
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                Category
            </th>
            <th colspan="2" class="text-center">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="text-align:right">
                <a asp-action="Details" asp-route-id="@item.ProductPk">
                    <img src="~/Images/Product/@item.ImageFile" height="100" width="100" alt="@item.ProductName" />
                </a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.ProductPk">@item.ProductName</a>
            </td>
            <td>
                @item.UnitPrice.ToString("c2")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OnHand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryFkNavigation.ProductCategoryName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductPk" class="btn btn-sm btn-warning">Edit</a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.ProductPk" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">
                    Delete
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
